# Environment Variables for RAG Project Template
# Copy this file to .env and fill in your actual API keys

# OpenAI Configuration (Optional)
OPENAI_API_KEY=sk-your_openai_api_key_here

# OpenRouter Configuration for UI-to-Code (Recommended)
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# UI-to-Code Model Configuration
VISUAL_MODEL=google/gemini-flash-1.5
CODE_MODEL=deepseek/deepseek-r1-distill-llama-8b
# Alternative models:
# CODE_MODEL=deepseek/deepseek-r1-distill-llama-70b:free (m√°s potente, gratis)
# VISUAL_MODEL=meta-llama/llama-3.2-11b-vision-instruct
# CODE_MODEL=meta-llama/llama-3.1-8b-instruct

# Pinecone Configuration  
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX=rag-index
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1
PINECONE_NAMESPACE=default

# Embedding Model Configuration
EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false

# Development settings (optional)
# RELOAD=true
# HOST=0.0.0.0
# PORT=8000